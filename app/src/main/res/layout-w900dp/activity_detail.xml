<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_d_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:fitsSystemWindows="true"
    tools:context="dev.tiar.mangacat.ui.DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_bar_thumb"
                android:layout_margin="@dimen/text_margin"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:fitsSystemWindows="true"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/img_pb_d"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/loading_anim"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/img_bar"
                android:layout_margin="@dimen/text_margin"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:background="@color/colorPrimaryLightGone"
                android:fitsSystemWindows="true"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:id="@+id/content_controls"
                android:layout_width="match_parent"
                android:layout_height="458dp"
                android:gravity="bottom"
                android:layout_margin="@dimen/text_margin"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/content_controls_down"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/item_select_bg"
                    app:srcCompat="@drawable/ic_menu_down_false"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/content_controls_fav"
                    android:layout_marginLeft="4dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/item_select_bg"
                    app:srcCompat="@drawable/ic_menu_fav_false"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/content_detail"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/progressLD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorGrey"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <ImageView
                    android:id="@+id/img_progressLD"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/loading_anim"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
